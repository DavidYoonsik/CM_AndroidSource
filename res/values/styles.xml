<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Blacknwhite" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_blacknwhite</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Blacknwhite</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Blacknwhite</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Blacknwhite</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Blacknwhite</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Blacknwhite</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_blacknwhite</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_blacknwhite</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Blacknwhite</item>
        
        
    </style>

    <style name="ActionBar.Solid.Blacknwhite" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_blacknwhite</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_blacknwhite</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_blacknwhite</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Blacknwhite</item>
    	<item name="android:titleTextStyle">@style/ActionBar.Solid.App.TitleTextStyle</item>
    </style>
    
    <style name="ActionBar.Solid.App.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActionBar.Transparent.Blacknwhite" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_blacknwhite</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Blacknwhite</item>
    </style>

    <style name="PopupMenu.Blacknwhite" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_blacknwhite</item>	
    </style>

    <style name="DropDownListView.Blacknwhite" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_blacknwhite</item>
    </style>

    <style name="ActionBarTabStyle.Blacknwhite" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_blacknwhite</item>
    </style>

    <style name="DropDownNav.Blacknwhite" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_blacknwhite</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_blacknwhite</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_blacknwhite</item>
    </style>
    
    <style name="ProgressBar.Blacknwhite" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_blacknwhite</item>
    </style>
    
    <style name="ActionButton.CloseMode.Blacknwhite" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_blacknwhite</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Blacknwhite.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Blacknwhite</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Blacknwhite</item>
    </style>

</resources>
